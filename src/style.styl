word-wrap()
  word-break:     break-word
  -webkit-hyphens: auto
  -moz-hyphens:    auto
  hyphens:         auto

a:active
  color: inherit

a:visited
  color: inherit

a:hover
  color: inherit
  text-decoration: none

body
  word-wrap()
  font-size: 14px
  color: #000111;
  line-height: 1.3
  font-weight: 100
  font-family: "Gill Sans Extrabold", Helvetica, sans-serif

  @media screen and (min-width: 768px)
    font-size: 16px

h1
  font-family: tahoma
  font-size: 30px
  font-weight: 400
  font-feature-settings: "liga"
  color: #005cb2
h2
  font-family: tahoma
  font-weight: 300
  font-size: 20px
  font-feature-settings: "liga"
  color: #6ab7ff

// Content
#content
  max-width: 754px
  margin: 0 auto
  padding-left: 1.5em
  padding-right: 1.5em

// Footer
#footer
  background: #242124
  padding-bottom: 2vmin
